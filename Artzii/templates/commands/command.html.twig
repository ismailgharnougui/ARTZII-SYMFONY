{% extends 'base2.html.twig' %}

{% block title %}
	Artzii
{% endblock %}


{% block body %}


	<div class="container">
		<div class="row">
			<div class="col-md-7">
				<div class="card" style="margin-top: 8px; border-radius: 7px;">
					<div class="card-header bg-white" style="border-top-right-radius: 7px; border-top-left-radius: 7px;">
						<h4 class="card-title">1. ADRESSE</h4>
					</div>

					<div class="card-body">
						<span>
							<h5 class="card-title">Adresse de livraison</h5>
						</span>

						<div class="form-check">
							<label class="form-check-label">
								<input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
								<span class="form-check-sign"></span>
								Utiliser l'adresse de livraison par défaut
							</label>
						</div>
						<div class="form-check">
							<label class="form-check-label">
								<input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
								<span class="form-check-sign"></span>
								Utiliser une autre adresse de livraison
							</label>
						</div>

						<div class="row">
							<div class="col-md-6">
								<div class="form-group">
									<label for="exampleInputEmail1" style="color: black;">Nom</label>
									<input type="email" class="form-control" placeholder="Nom">
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label for="exampleInputEmail1" style="color: black;">Prénom</label>
									<input type="email" class="form-control" placeholder="Prénom">
								</div>
							</div>
						</div>


					</div>
				</div>

				<div class="card" style="margin-top: 8px; border-radius: 7px;">
					<div class="card-header bg-white" style="border-top-right-radius: 7px; border-top-left-radius: 7px;">
						<h4 class="card-title">
							2. MODE DE LIVRAISON
						</h4>
					</div>

					<div class="card-body">
						<span>
							<h5 class="card-title">Comment voulez-vous que votre commande soit livrée ?</h5>
						</span>


						<div class="form-check1">
							<label class="form-check-label">
								<input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
								<span class="form-check-sign"></span>
								Livraison à domicile : recevez vos pieces priféres chez vous en toute sécurité et en toute simplicité
							<br> </label> <br>
							<label class="form-check-label">
								<input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1">
								<span class="form-check-sign"></span>
								Livraison Artzii now : frais de livraison moins cher que la livraison à domicile
							</label>
						</div>


                        <span>
							<h5 class="card-title">Comment voulez-vous payer ?</h5>
						</span>


						<div class="form-check2">
							<label class="form-check-label">
								<input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
								<span class="form-check-sign"></span>
                                Paiement CASH à la livraison
							</label>
							<label class="form-check-label">
								<input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1">
								<span class="form-check-sign"></span>
								Paiement en ligne via STRIPE
							</label>
						</div>

						<div class="card" style="margin-top: 8px; border-radius: 7px;">
							<div class="card-header bg-white" style="border-top-right-radius: 7px; border-top-left-radius: 7px;">
								<h4 class="card-title">
									DÉTAILS DE LIVRAISON
								</h4>
							</div>

							<div class="card-body">
								{% for i in 1..3 %}
									<h6 class="card-title">Piece {{i}} de 3</h6>
									<div>  <span style="font-weight: bold;"> 1x </span> when the sun goes down </div>
                                    
								     <div> Livré entre vendredi 24 mars et mardi 28 mars </div>
									<hr>
								{% endfor %}
							</div>
						</div>


					</div>
				</div>

			</div>

			<div class="col-md-5">
				<div class="card" style="margin-top: 8px; border-radius: 7px;">
					<div class="card-header bg-white" style="border-top-right-radius: 7px; border-top-left-radius: 7px;">
						<h4 class="card-title">IDENTIFICATION</h4>
					</div>
				</div>
			</div>


		{% endblock %}
