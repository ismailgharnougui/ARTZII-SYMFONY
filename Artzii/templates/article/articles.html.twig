{% extends 'base2.html.twig' %}

{% block title %}Artiiz{% endblock %}

{% block body %}
    
    {% for article in articles %}

        <section class="posts" style="position: relative;">
            
           <img class="img2" src="{{asset('assets/images/userImage.png')}}" alt="" width="55px" style="display: inline-block; margin-top: 10px; margin-left: 10px;">
           <h3 style="display: inline-block; margin-top: 10px; margin-left: 3px;font-size: 17px; font-color:black; font-weight: bold;">{{article.getIdartiste().nomu}} {{article.getIdartiste().prenomu}}</h3>
           
           {% if article.getArtid in existingArticles %}
           <img  src="{{asset('assets/images/basketChecked.png')}}" alt="exist in cart" width="54px" style="position: absolute; top: 0 ; right: 0; margin-top: 15px; margin-right: 15px;">
            {% else %}
            <a href="{{ path('app_addToBasket', {'idArticle': article.getArtid()} ) }}">
           <img  src="{{asset('assets/images/basket2.png')}}" alt="add to cart" width="52px" style="position: absolute; top: 0 ; right: 0; margin-top: 15px; margin-right: 15px;">
            </a>
           {% endif %}


            <article class="article1"> 
                <h2>{{article.getArtlib()}}</h2>
                <div class="metadat">
                   Publié le: 01/02/2023 à 12:00 <span class="badge bg-dark text-white p-1" style="border-radius: 3px;">{{article.getCatlib()}}</span>
                </div>
                <div class="content">
                   
                    <img class="img1" src="{{asset(article.getArtimg())}}" alt="" width="360px" class="mt-3 mb-3">

                    <br>
                </div> 
                  <div style="font-weight:bold; margin-top: 6px;margin-left: auto; margin-right: auto;font-size: 19px;">{{article.getArtdesc()}} cm</div>
            </article>
            <p style="font-weight:bold; color:black; margin-left:515px; font-size: 21px;">Prix: {{article.getArtprix()}}DT</p>

        </section>
    {% endfor %}


    {% for flash_message in app.session.flashbag.get('success') %}
    <div id="myAlert" class="alert alert-success alert-dismissible fade show" role="alert" style="position: fixed; top: 65px; left: 50%; transform: translateX(-50%); z-index: 9999; margin: 10px; padding: 8px 25px; border-radius: 4px; background-color: #2ecc71; color: #fff; font-size: 16px; ">
        {{ flash_message }}
       
    </div>
    {% endfor %}

    {% for flash_message in app.session.flashbag.get('command_ajoute') %}
    <div id="myAlert2" class="alert alert-success alert-dismissible fade show" role="alert" style="position: fixed; top: 65px; left: 50%; transform: translateX(-50%); z-index: 9999; margin: 10px; padding: 8px 25px; border-radius: 4px; background-color: #2ecc71; color: #fff; font-size: 16px; ">
        {{ flash_message }}
    </div>
    {% endfor %}

    <script>
        // Automatically dismiss the alert after 3 seconds
        setTimeout(function() {
            document.querySelector('.alert').remove();
        }, 3000);
    </script>





























