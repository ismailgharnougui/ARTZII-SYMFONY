{% extends 'base.html.twig' %} {# hedhi aamalnehla extend #}
{% block body %}
        <main id="main" class="main">

            <div class="pagetitle">
                <h1> <button type="submit" class="btn btn-block" style="border-radius: 30px; padding: 15px 60px; font-size: 24px; background-color: #009688; border: none; color: #fff; font-weight: 300;">Sign up</h1>
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item">Forms</li>
                        <li class="breadcrumb-item active">User</li>
                    </ol>
                </nav>
            </div>


        <div class="row">
            <div  style="display: flex;align-items: center;justify-content: center;margin-top: 0px; padding: 10px;">

                <div class="card">

                    <div class="card-body">
                        <h5 class="card-title">Register</h5>
                        {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}

                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-4 col-form-label">nomU</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.nomU,{'attr':{'class':'form-control'}}) }}
                                {{ form_errors(f.nomU,{'attr':{'class':'text-danger'}}) }}

                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-4 col-form-label">prenomU</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.prenomU,{'attr':{'class':'form-control'}}) }}
                                {{ form_errors(f.prenomU,{'attr':{'class':'text-danger'}}) }}
                            </div>

                        </div>
                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-4 col-form-label">emailU</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.emailU,{'attr':{'class':'form-control'}}) }}
                                {{ form_errors(f.emailU,{'attr':{'class':'text-danger'}}) }}
                            </div>
                        </div>

                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-4 col-form-label">mdpU</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.mdpU,{'attr':{'class':'form-control'}}) }}
                            {{ form_errors(f.mdpU,{'attr':{'class':'text-danger'}}) }}
                        </div>
                    </div>

                  <div class="row mb-3">
                    <label for="inputText" class="col-sm-4 col-form-label">roleU</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.roleU,{'attr':{'class':'form-control'}}) }}
                        {{ form_errors(f.roleU,{'attr':{'class':'text-danger'}}) }}
                    </div>
                </div>

            <div class="row mb-3">
                <label for="inputText" class="col-sm-4 col-form-label">adresse</label>
                <div class="col-sm-10">
                    {{ form_widget(f.adresse,{'attr':{'class':'form-control'}}) }}
                    {{ form_errors(f.adresse,{'attr':{'class':'text-danger'}}) }}
                </div>
            </div>
                        <br/>
                        <br/>
            <div class="row mb-3">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">S'enregistrer</button>

                </div>
            </div>
                        {{ form_end(f) }}
                    </div>
                </div>
            </div>
        </div>

        </main>
{% endblock %}