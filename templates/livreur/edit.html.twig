{% extends 'base.html.twig' %}

{% block title %}Edit Livreur
{% endblock %}

{% block body %}

		<div class="pagetitle">
			<h1>Edit Livreur</h1>
			<nav>
				<ol class="breadcrumb">
					<li class="breadcrumb-item">
						<a href="index.html">Home</a>
					</li>
					<li class="breadcrumb-item">Livreur</li>
				</ol>
			</nav>
		</div>
		<!-- End Page Title -->

		<section class="section">
			<div class="row">
				<div class="col-lg-12">

					<div class="card">
						<div class="card-body">
							<h5 class="card-title">Livreur</h5>


							{{ form_start(form,{'attr': {'novalidate': 'novalidate'}}
							) }}

							<div class="card-body">


								<div class="form-group">
									<label for="exampleInputPassword1">Nom
									</label>
									{{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
									{{ form_errors(form.nom, {'attr': {"class":"mb-0"}}) }}
								</div>
								<div class="form-group">
									<label for="exampleInputPassword1">Prenom
									</label>
									{{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
									{{ form_errors(form.prenom, {'attr': {"class":"mb-0"}}) }}
								</div>
								<div class="form-group">
									<label for="exampleInputPassword1">Region
									</label>
									{{ form_widget(form.region, {'attr': {'class': 'form-control'}}) }}
									{{ form_errors(form.region, {'attr': {"class":"mb-0"}}) }}
								</div>
								<div class="form-group">
									<label for="exampleInputPassword1">Telephone
									</label>
									{{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
									{{ form_errors(form.telephone, {'attr': {"class":"mb-0"}}) }}
								</div>


								<div class="card-footer">
									{{ form_widget(form.edit, {'attr': {'class': 'btn btn-primary'}}) }}
									<a class='btn btn-info' href="{{ path('app_livreur_index') }}">back to list</a>
								</div>
								{{ form_end(form) }}
							</div>
						</div>

					</div>
				</div>
			</section>


	{% endblock %}
