{% extends 'base.html.twig' %}

{% block title %}Artzii - Login{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<h2 class="text-center mb-5">Login</h2>

				{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
				<div class="form-group">
					{{ form_label(form.mail, 'Email', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
					<div class="col-sm-10">
						{{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}
						{{ form_errors(form.mail) }}
					</div>
				</div>
				<div class="form-group">
					{{ form_label(form.password, 'Password', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
					<div class="col-sm-10">
						{{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
						{{ form_errors(form.password) }}
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						{{ form_widget(form.Login, {'attr': {'class': 'btn btn-primary btn-block'}}) }}
					</div>
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
