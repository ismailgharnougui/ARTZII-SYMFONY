{% extends 'baseback.html.twig' %}

{% block body %}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Reclamation Statistics</h1>

    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-3">

    <p>Total number of reclamations: {{ reclmationresolut+reclmationrenonsolut }}</p>

    <p>Number of resolved reclamations: {{ reclmationresolut }}</p>

    <p>Number of unresolved reclamations: {{ reclmationrenonsolut }}</p>
            </div>
            <div class="row">
                <div class="col-7">

    <canvas id="chart"></canvas>

                </div>

            </div>
        </div>
    </section>
</main>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('chart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: ['Total', 'Resolved', 'Unresolved'],
                datasets: [{
                    label: 'Reclamations',
                    data: [
                        {{ reclmationresolut+reclmationrenonsolut }},
                        {{ reclmationresolut }},
                        {{ reclmationrenonsolut }}
                    ],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    </script>
{% endblock %}
