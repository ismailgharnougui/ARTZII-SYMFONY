{% extends 'baseback.html.twig' %}

{% block title %}Reclamation{% endblock %}

{% block body %}
    <main id="main" class="main">
<div class="pagetitle">
    <h1>Reclmation</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href={{ path('app_admin_reclamation') }}>Liste Reclamation</a></li>
            <li class="breadcrumb-item active">Reclamation</li>
        </ol>

    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <div class="card-title">
                Reclamation
            </div>

        </div>
        <div class="card-body">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ reclamation.id }}</td>
