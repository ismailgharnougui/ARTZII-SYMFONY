                <tr>
                    <th>TypeR</th>
                    <td>{{ reclamation.TypeR }}</td>
                </tr>
                <tr>
                    <th>DateR</th>
                    <td>{{ reclamation.dateR ? reclamation.dateR|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Etat</th>
                    <td>{{ reclamation.etat }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ reclamation.Description }}</td>
                </tr>
                <tr>
                    <th>Objet</th>
                    <td>{{ reclamation.objet }}</td>
                </tr>
                </tbody>
            </table>



            {{ include('reclamation/_delete_form_admin.html.twig') }}
        </div>
    </div>
        </div>
    </div>
</section>
    </main>


{% endblock %}
