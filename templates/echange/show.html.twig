{% extends 'base.html.twig' %}

{% block title %}Echange{% endblock %}

{% block body %}
    <section class="section" style="height: 100vh; background-image: url({{ asset('home-img3.png') }}) !important ;background-repeat: no-repeat ;background-size: cover" id="demo">
        <div class="container-fluid" style="display: flex;flex-direction: column ;justify-content: center">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="title text-center">
                        <h4>Echange details</h4>
                    </div>
                </div>
            </div>

            <div class="d-flex flex-wrap align-items-stretch" style="gap: 5vw ;justify-content: center ">

                <div class="col-3" >
                        <div class="d-flex flex-column h-100">
                            <div class="demo-box text-center p-3 pb-0 mt-4 mb-0 flex-grow-1" style="justify-self: center;align-self: center">
                                <a href="{{ path('front_product_show', {'id': echange.produitEchange.id})  }}" class="text-dark">
                                    <div class="position-relative demo-content">
                                        <div class="demo-img">
                                            <img style="height: 260px; width: 100vw" src="{{ asset(echange.produitEchange.getImageUrl()) }}" alt="" class="img-fluid mx-auto d-block rounded">
                                        </div>
                                        <div class="demo-overlay" style="background: linear-gradient(to bottom, #ba9217, black)">
                                            <div class="overlay-icon">
                                                <i class="pe-7s-expand1 h1 text-white"></i>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="demo-box rounded-bottom pt-0 p-2 " style="--bs-bg-opacity:0.8">
                                <div class="d-flex justify-content-center">
                                    <h5 class="font-18">{{ echange.produitEchange.nomProduit }}</h5>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>{{ echange.produitEchange.categorie }}</span>
                                    <span>{{ echange.produitEchange.price }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                <div class="col-3" >
                    <div class="d-flex flex-column h-100">
                        <div class="demo-box text-center p-3 pb-0 mt-4 mb-0 flex-grow-1" style="justify-self: center;align-self: center">
                            <a href="{{ path('front_product_show', {'id': echange.produitOffert.id})  }}" class="text-dark">
                                <div class="position-relative demo-content">
                                    <div class="demo-img">
                                        <img style="height: 260px; width: 100vw" src="{{ asset(echange.produitOffert.getImageUrl()) }}" alt="" class="img-fluid mx-auto d-block rounded">
                                    </div>
                                    <div class="demo-overlay" style="background: linear-gradient(to bottom, #ba9217, black)">
                                        <div class="overlay-icon">
                                            <i class="pe-7s-expand1 h1 text-white"></i>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="demo-box rounded-bottom pt-0 p-2 " style="--bs-bg-opacity:0.8">
                            <div class="d-flex justify-content-center">
                                <h5 class="font-18">{{ echange.produitOffert.nomProduit }}</h5>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>{{ echange.produitOffert.categorie }}</span>
                                <span>{{ echange.produitOffert.price }}</span>
                            </div>

                        </div>
                    </div>
                </div>


            </div>
            <div style="align-self: center ;margin-top: 7vh">
                <form method="post" action="{{ path('accept_echange', {'id': echange.id}) }}">
                    <button type="submit" class="btn btn-primary">Accept</button>
                </form>
                <button class="btn btn-danger">Cancel</button>
            </div>

        </div>
    </section>

{% endblock %}
