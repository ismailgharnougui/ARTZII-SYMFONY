{% extends 'baseBack.html.twig' %}
{% block body %}
    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Noter un Article</h1>
            <nav>

            </nav>
        </div>


        <div class="row">
            <div  style="display: flex;align-items: center;justify-content: center;margin-top: 0px; padding: 10px;">

                <div class="card">

                    <div class="card-body">
                        <h5 class="card-title">Noter Service</h5>

                        {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-4 col-form-label">ServLib</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.artlib,{'attr':{'class':'form-control'}}) }}
                                {{ form_errors(f.artlib,{'attr':{'class':'text-danger'}}) }}
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputPassword" class="col-sm-4 col-form-label">Description</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.artdesc,{'attr':{'class':'form-control'}}) }}
                                {{ form_errors(f.artdesc,{'attr':{'class':'text-danger'}}) }}

                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-4 col-form-label">Service Dispo</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.artdispo,{'attr':{'class':'form-control'}}) }}
                                {{ form_errors(f.artdispo,{'attr':{'class':'text-danger'}}) }}
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputNumber" class="col-sm-4 col-form-label">File Upload</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.artimg,{'attr':{'class':'form-control'}}) }}

                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-4 col-form-label">Prix</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.artprix,{'attr':{'class':'form-control'}}) }}
                                {{ form_errors(f.artprix,{'attr':{'class':'text-danger'}}) }}
                            </div>
                        </div>




                        <div class="row mb-1">
                            <label for="inputNumber" class="col-sm-4 col-form-label">CatLib</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.catlib,{'attr':{'class':'form-control'}}) }}
                                {{ form_errors(f.catlib,{'attr':{'class':'form-control'}}) }}

                            </div>
                        </div>
                        <br/>
                        <br/>
                        <div class="row mb-3">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Enregistrer</button>

                            </div>
                        </div>
                        {{ form_end(f) }}
                    </div>
                </div>
            </div>
        </div>

    </main>
{% endblock %}