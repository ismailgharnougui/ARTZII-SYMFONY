{% extends 'base.html.twig' %}
{% block body %}
        <main id="main" class="main">

            <div class="pagetitle">
                <h1>Formualire Ajout Article</h1>
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item">Forms</li>
                        <li class="breadcrumb-item active">Article</li>
                    </ol>
                </nav>
            </div>


        <div class="row">
            <div  style="display: flex;align-items: center;justify-content: center;margin-top: 0px; padding: 10px;">

                <div class="card">

                    <div class="card-body">
                        <h5 clss="card-title">Ajouter Article</h5>

                        {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-4 col-form-label">ArtLib</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.ArtLib,{'attr':{'class':'form-control'}}) }}
                                {{ form_errors(f.ArtLib,{'attr':{'class':'text-danger'}}) }}
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputPassword" class="col-sm-4 col-form-label">Description</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.ArtDesc,{'attr':{'class':'form-control'}}) }}
                                {{ form_errors(f.ArtDesc,{'attr':{'class':'text-danger'}}) }}

                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-4 col-form-label">ArtDispo</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.ArtDispo,{'attr':{'class':'form-control'}}) }}
                                {{ form_errors(f.ArtDispo,{'attr':{'class':'text-danger'}}) }}
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputNumber" class="col-sm-4 col-form-label">File Upload</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.ArtImg,{'attr':{'class':'form-control'}}) }}

                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-4 col-form-label">Prix</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.ArtPrix,{'attr':{'class':'form-control'}}) }}
                                {{ form_errors(f.ArtPrix,{'attr':{'class':'text-danger'}}) }}
                            </div>
                        </div>




                        <div class="row mb-1">
                            <label for="inputNumber" class="col-sm-4 col-form-label">Cat Lib</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.CatLib,{'attr':{'class':'form-control'}}) }}

                            </div>
                        </div>
                        <br/>
                        <br/>
                     <div class="row mb-3">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">S'enregistrer</button>

                            </div>
                        </div>
                        {{ form_end(f) }}
                    </div>
                </div>
            </div>
        </div>

        </main>
{% endblock %}